/*
    In this example, we'll be handling user text input
*/

Window {
    id: wnd
    color: "grey"

    TextInput {
        id: input
        relativePos: 0.5, 0.5
        relativeSize: 0.3, 0.1
        font: "font.xml"
        maxLength: 0
    }

    Text {
        id: text
        relativePos: 0.5, 0.75
        relativeSize: 0.3, 0.1
        center: true
        font: "font.xml"
        fontColor: "red"
        text: input.text
    }
}